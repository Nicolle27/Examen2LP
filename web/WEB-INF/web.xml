    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatController</servlet-name>
        <url-pattern>/cat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VentasController</servlet-name>
        <url-pattern>/VentasController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SucursalesController</servlet-name>
        <url-pattern>/SucursalesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientesController</servlet-name>
        <url-pattern>/ClientesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tablitauwu</servlet-name>
        <url-pattern>/Tablita</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductosController</servlet-name>
        <url-pattern>/ProductosController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>VendedorController</servlet-name>
        <servlet-class>upeu.controller.VendedorController</servlet-class>
    </servlet>
