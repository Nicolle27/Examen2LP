    </servlet>
    <servlet>
        <servlet-name>Tablitauwu</servlet-name>
        <servlet-class>upeu.controller.TablaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductosController</servlet-name>
        <servlet-class>upeu.controller.ProductosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendedorController</servlet-name>
        <servlet-class>upeu.controller.VendedorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
